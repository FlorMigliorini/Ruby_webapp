<h1>Reviews in <%= @course.title %></h1>
<table>
<tr>
<th>Review details</th>
</tr>
<% for review in @reviews %>
<tr>
<td><%= review.details %></td>
<td><%= link_to 'Show', courses_review_path(@course, review)
%></td>
<td><%= link_to 'Edit', edit_courses_review_path(@course, review)
%></td>
<td><%= link_to 'Destroy', courses_review_path(@course, review),
:confirm => 'Are you sure?', :method => :delete %></td>
</tr>
<% end %>
</table>
<br />
<%= link_to 'New review', new_courses_review_path(@course) %>
<%= link_to 'Back to Course', @course %>

